<div class="col ps-md-2 pt-2">
    <div class="page-header ">
        <div class="navbar navbar-expand-md   px-0 sticky-top">
            <div class="container-fluid">
                <!--Page Title-->  
                <h2>Material</h2>
                <button class="navbar-toggler bg-light " type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </div>
    <hr class="mt-1">
    <div class="d-flex mb-3">
        <div class="p-2">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" id="btnCreate"> <!--Create Btn-->
                <i class="fa-solid fa-circle-plus"></i><span class="ms-1 d-none d-sm-inline">Create</span>
            </button>
            <!-- Modal id="modalMaterial"-->
            <form id = 'addMaterial-form'>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content" id="modalMaterial">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Create Material</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3 row">
                                <!-- SKU id="inputMaterialSKU"-->
                                <label for="inputMaterialSKU" class="col-sm-2 col-form-label">Material SKU:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputMaterialSKU">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                <!-- Description id="inputDescMat"-->
                                <label for="inputDescMat" class="col-sm-2 col-form-label">Description:</label>
                                    <div class="col-sm-10">
                                            <input type="text" class="form-control" id="inputDescMat">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                <!-- Stock id="inputStockMat"-->
                                <label for="inputStockMat" class="col-sm-2 col-form-label">Stock:</label>
                                    <div class="col-sm-10">
                                            <input type="text" class="form-control" id="inputStockMat">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                <!-- UOM id="inputUomMat"-->
                                <label for="inputUomMat" class="col-sm-2 col-form-label" >Unit of Measure:</label>
                                    <div class="col-sm-10">
                                            <input type="text" class="form-control" id="inputUomMat">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                <!-- Price id="inputPriceMat"-->
                                <label for="inputPriceMat" class="col-sm-2 col-form-label" >Price:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputPriceMat">
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <!-- BtnSubmit id="btnSubmitMat"-->
                                <button type="submit" class="btn btn-primary" id="btnSubmitMat">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>              
        </div>
        <div class="ms-auto p-2">
        <form class="d-flex" role="search">
            <!--id="inputSearch"--> 
            <input class="form-control me-2" type="search" placeholder="Search by SKU" aria-label="Search" id="inputSearch">
            <!--id="btnSearch"--> 
            <button class="btn btn-outline-primary" type="button" id="btnSearch"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover" id = "TableMat">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Material SKU</th>
                <th scope="col">Description</th>
                <th scope="col">Stock</th>
                <th scope="col">Unit of Measure</th>
                <th scope="col">Price</th>
                <th scope="col">Options</th>
            </tr>
            </thead>
            <tbody class="align-self-center">
                {{#each materials as |material|}}
                {{> material-details}}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script src='/js/material.js'></script> 