<!-- table content id="tableContent"-->
<tr id="tableContent">
    <!--th scope="row">{{id}}</th-->
    <td>{{first_name}}</td>
    <td>{{last_name}}</td>
    <td>
        <a class="btn btn-primary fa-xs" href="mailto:{{email}}" role="button"><i class="fa-solid fa-envelope"></i></a>
        <a id = "EmailValue-{{id}}">{{email}}</a>
    </td>
    <td>
        <a class="btn btn-primary fa-xs" href="tel:{{tel}}" role="button"><i class="fa-solid fa-phone"></i></a>
        <a>{{tel}}</a>
    </td>
    <td>
    {{#if super}}
    <!--id="btnModify"-->
        <button type="button" class="btn btn-primary fa-xs" data-bs-toggle="modal" data-bs-target="#UpdateUserModal-{{id}}" id="btnModify-{{id}}"> 
            <i class="fa-solid fa-pen-to-square"></i>
        </button>
        
            <!-- Modal id="modalModify"-->
            <div class="modal fade bd-example-modal-lg" id="UpdateUserModal-{{id}}" tabindex="-1" aria-labelledby="modal" aria-hidden="true">
            <form class = "UpdateUser" data-index = "{{id}}">
            <div class="modal-dialog modal-lg">
                <div class="modal-content" id="modalModify-{{id}}">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modal-{{id}}">Modify User</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 row">
                    <!-- Name id="nameM"-->
                    <label for="inputFirstName-{{id}}" class="col-sm-2 col-form-label">First Name:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputFirstName-{{id}}" value="{{first_name}}">
                        </div>
                    </div>
                    <div class="mb-3 row">
                    <!-- Last Name id="lastM"-->
                    <label for="inputLastName-{{id}}" class="col-sm-2 col-form-label" >Last Name:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputLastName-{{id}}" value="{{last_name}}">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <!-- Email id="emailM"-->
                        <label for="inputEmail-{{id}}" class="col-sm-2 col-form-label" >Email:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputEmail-{{id}}" value="{{email}}">
                            </div>
                    </div>
                    <div class="mb-3 row">
                        <!-- Tel id="telM"-->
                        <label for="inputTel-{{id}}" class="col-sm-2 col-form-label" >Tel:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputTel-{{id}}" value="{{tel}}">
                            </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword-{{id}}" class="col-sm-2 col-form-label">New Password:</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="inputPassword-{{id}}" placeholder="Type only if you want to change password">
                            </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <!-- Button id="btnUpdate"-->
                    <button type="submit" class="btn btn-primary" id="btnUpdateUser-{{id}}">Submit</button>
                </div>
                </div>
            </div>
            </form>
            </div>
        
            <!-- Button id="btnDelete"-->
            <button class="btn btn-danger fa-xs deleteUser" type="button" id="btnDeleteUser-{{id}}" data-index = "{{id}}">
                <i class="fa-solid fa-trash-can" id="iconDeleteUser-{{id}}" data-index = "{{id}}"></i>
            </button>
        {{/if}}
        
    </td>
</tr>
<!-- table content-->